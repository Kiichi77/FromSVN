package cn.com.kxcomm.ipmitool.raw.interfaces;

import java.util.List;

import cn.com.kxcomm.ipmitool.entity.PolicyEntity;

public interface IPolicyRaw {
	/**
	 * 
	 * 获取某个策略<br/>
	 * 命令<br/>
	 * NM 1.5:raw 0x2E 0xC2 0x57 0x01 0x00 0x00 0x00<br/>
	 * NM 2.0:raw 0x2E 0xC2 0x57 0x01 0x00 0x00 0x00<br/>
	 * IDRAC7:raw 0x2E 0xC2 0x57 0x01 0x00 0x00 0x00<br/>
	 * 
	 * @param ser
	 *            服务器信息
	 * @param policyId
	 *            策略ID
	 * @param component
	 *            见Parameter.domainSystem domainCpu domainMemory
	 * @return PolicyEntity 策略实体
	 * @author zhangjh 新增日期：2012-8-20
	 * @since ipmi_sdk
	 */
	public PolicyEntity getPolicyById( int policyId,Integer component);

	/**
	 * 
	 * 获取所有策略(遍历30次)
	 * 
	 * @return List<PolicyEntity>
	 * @author zhangjh 新增日期：2012-8-20
	 * @since ipmi_sdk
	 */
	public List<PolicyEntity> queryAllPolicy();

	/**
	 * 
	 * 设置策略打开或者关闭<br/>
	 * 命令<br/>
	 * NM 1.5:raw 0x2e 0xc0 0x57 0x01 0x00 0x01 0x00 0x00<br/>
	 * NM 2.0:raw 0x2e 0xc0 0x57 0x01 0x00 0x05 0x00 0x00<br/>
	 * IDRAC7:raw 0x2e 0xc0 0x57 0x01 0x00 0x05 0x00 0x06<br/>
	 * 
	 * @param policyId
	 * @param status
	 *            true打开,false关闭
	 * @author zhangjh 新增日期：2012-8-20
	 * @since ipmi_sdk
	 */
	public boolean setPolicyStatus( int policyId, boolean status,
			int component);

	/**
	 * 
	 * 删除策略<br/>
	 * 命令<br/>
	 * NM 1.5:raw 0x2e 0xc1 0x57 0x01 0x00 0x00 0x05 0x00 0x03 0xC8 0x00 0x70
	 * 0x17 0x00 0x00 0x00 0x00 0x01 0x00<br/>
	 * NM 2.0:raw 0x2e 0xc1 0x57 0x01 0x00 0x00 0x01 0x00 0x00 0x00 0x00 0x00
	 * 0x00 0x00 0x00 0x00 0x00 0x00 0x00<br/>
	 * IDRAC7:raw 0x2e 0xc1 0x57 0x01 0x00 0x00 0x06 0x00 0x00 0x00 0x00 0x00
	 * 0x00 0x00 0x00 0x00 0x00 0x00 0x00<br/>
	 * 
	 * @param policyId
	 * @return boolean
	 * @author zhangjh 新增日期：2012-8-20
	 * @since ipmi_sdk
	 */
	public boolean removePolicyID( int policyId, int component);

	/**
	 * 
	 * 新增或设置策略<br/>
	 * 命令<br/>
	 * NM 1.5:raw 0x2E 0xC1 0x57 0x01 0x00 0x10 0x02 0x11 0x00 0x00 0x00 0x70 0x17 0x00 0x00 0x1C 0x00 0x01 0x00<br/>
	 * NM 2.0:raw 0x2E 0xC1 0x57 0x01 0x00 0x00 0x00 0x10 0x01 0xFF 0x7F 0xC0 0x27 0x09 0x00 0x00 0x00 0x1E 0x00<br/>
	 * IDRAC7:raw 0x2E 0xC1 0x57 0x01 0x00 0x00 0x06 0x10 0x01 0xFF 0x7F 0xC0 0x27 0x09 0x00 0x00 0x00 0x1E 0x00<br/>
	 * 
	 * @param req
	 * @return
	 * @author zhangjh 新增日期：2012-8-20
	 * @since ipmi_sdk
	 */
	public boolean setPolicy( PolicyEntity req);

	/**
	 * 
	 * 删除所有策略
	 * 
	 * @author zhangjh 新增日期：2012-8-21
	 * @since ipmi_sdk
	 */
	public void removeAllPolicy();
}
